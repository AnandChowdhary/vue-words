{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/manifest.json",
        "destination": "/manifest.json"
      },
      {
        "source": "/site.webmanifest",
        "destination": "/site.webmanifest"
      },
      {
        "source": "/browserconfig.xml",
        "destination": "/browserconfig.xml"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}